@using TravelTripProject.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kullanıcı</th>
            <th>Mail</th>
            <th>Yorum</th>
            <th>Blog</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.KullaniciAdi</td>
                <td>@x.Mail</td>
                <td>@x.Yorum</td>
                <td>@x.Blog.Baslik</td>
                <td>
                    <a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a>
                    <a href="/Admin/YorumGuncelle/@x.ID" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>